[Unit]
Description=Home Agent Service
After=network.target

[Service]
Type=simple
User=wir
WorkingDirectory=/home/wir/Projects/personal_ai
ExecStart=/home/wir/Projects/personal_ai/agent -config /home/wir/Projects/personal_ai/configs/agent.json
Restart=always
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/wir/Projects/personal_ai

[Install]
WantedBy=multi-user.target
