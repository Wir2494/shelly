{
  "listen_addr": "127.0.0.1:8081",
  "telegram": {
    "bot_token": "CHANGE_ME_BOT_TOKEN",
    "mode": "polling",
    "webhook_path": "/telegram/webhook",
    "allowed_user_ids": [123456789],
    "poll_interval_sec": 3
  },
  "execution": {
    "mode": "local",
    "forward_url": "",
    "forward_auth_token": "CHANGE_ME_SHARED_SECRET",
    "local": {
      "default_timeout_sec": 10,
      "max_output_kb": 8,
      "base_dir": "/home/wir",
      "dynamic_allowlist": ["ls", "ll", "cat", "pwd", "cd", "touch", "mkdir", "write", "append", "count", "find", "ping"],
      "command_allowlist": {
        "status": { "exec": "/usr/bin/uptime", "args": [] },
        "disk": { "exec": "/bin/df", "args": ["-h"] },
        "memory": { "exec": "/usr/bin/free", "args": ["-h"] },
        "users": { "exec": "/usr/bin/who", "args": [] },
        "date": { "exec": "/bin/date", "args": [] }
      }
    }
  },
  "llm": {
    "enabled": false,
    "api_key": "CHANGE_ME_OPENAI_API_KEY",
    "model": "gpt-5.2",
    "timeout_sec": 15,
    "confidence_threshold": 0.7
  },
  "policy": {
    "rate_limit_per_minute": 20,
    "command_allowlist": [
      "status",
      "disk",
      "memory",
      "users",
      "date",
      "ls",
      "ll",
      "cat",
      "pwd",
      "cd",
      "touch",
      "mkdir",
      "write",
      "append",
      "count",
      "find",
      "ping"
    ],
    "command_blocklist": [
      "shutdown",
      "reboot",
      "adduser",
      "useradd",
      "passwd",
      "usermod",
      "deluser",
      "rm",
      "mkfs",
      "dd",
      "mount",
      "umount",
      "chmod",
      "chown",
      "sudo"
    ]
  },
  "audit": {
    "file_path": "/home/wir/Projects/personal_ai/audit.log"
  }
}
